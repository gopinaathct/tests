apiVersion: v1
kind: ServiceAccount
metadata:
  name: sandboxsa
  annotations:
    eks.amazonaws.com/role-arn: arn:aws:iam::487213271675:role/eks_s3_access

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: myapp
spec:

  selector:
    matchLabels:
      app: myapp
  template:
    metadata:
      labels:
        app: myapp
    spec:
      serviceAccountName: sandboxsa
      terminationGracePeriodSeconds: 60
      initContainers:
        - name: bucket-data
          command: ['aws', 's3', 'ls']
          securityContext:
            runAsUser: 1000
            runAsGroup: 1000
          image: amazon/aws-cli:latest
      containers:
      - name: myapp
        image: httpd
        resources:
          limits:
            memory: "128Mi"
            cpu: "500m"
        ports:
        - containerPort: 80
